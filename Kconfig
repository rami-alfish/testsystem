# ==============================================================
# Variablen-Typen: bool, tristate, int, hex, string
# ==============================================================

config CONFIG_BOOL
    bool "Boolean Option"
    default y

config CONFIG_TRISTATE
    tristate "Tristate Option"
    default m

config CONFIG_INT
    int "Integer Option"
    default 42
    range 0 100
    range 10 90 if CONFIG_BOOL

config CONFIG_HEX
    hex "Hex Option"
    default 0x1F

config CONFIG_STRING
    string "String Option"
    default "hello"

# ==============================================================
# Attribute: depends on, select, imply, prompt if
# ==============================================================

config CONFIG_SELECT_TARGET
    bool "Select Target"

config CONFIG_IMPLY_TARGET
    bool "Implied by other"

config CONFIG_DEPENDS
    bool "Has dependencies"
    depends on CONFIG_BOOL && CONFIG_TRISTATE = m

config CONFIG_WITH_SELECT
    bool "Uses select"
    select CONFIG_SELECT_TARGET

config CONFIG_WITH_IMPLY
    bool "Uses imply"
    imply CONFIG_IMPLY_TARGET

# ==============================================================
# Struktur: menu, choice, if/endif
# ==============================================================

menu "Test Menu"

config CONFIG_IN_MENU
    bool "Inside a menu"
    default y

endmenu

choice
    prompt "Choose one"

config CHOICE_1
    bool "First choice"
    depends on CONFIG_BOOL

config CHOICE_2
    bool "Second choice"

endchoice

if CONFIG_BOOL && CONFIG_TRISTATE != n

config CONFIG_IF_BLOCK
    bool "Only if certain conditions met"

endif

# ==============================================================
# SpezialfÃ¤lle: kein prompt, mehrfach default, option env
# ==============================================================

config CONFIG_INVISIBLE
    bool
    default y

config CONFIG_MULTI_DEFAULT
    bool "Has multiple defaults"
    default n
    default y if CONFIG_INT > 40

config CONFIG_ENV
    bool "Has env binding"


